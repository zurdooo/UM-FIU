def sum_of_two_number (first,second):
    print(first + second)
    return first + second

def get_perimter(length, width):
    print(2 * (length + width))
    return 2 * (length + width)

def get_area(length, width):
    print(length * width)
    return length * width

def main():
    first_number = float(input("Enter first number: "))
    second_number = float(input("Enter second number: "))
    total = sum_of_two_number(first_number,second_number)
    print(f"Sum of {first_number} + {second_number} = {total}")

    perimiter = get_perimter(first_number,second_number)
    area = get_area(first_number,second_number)
    print(f"Perimiter = {perimiter:.2f} and the area = {area:.2f}")

main()